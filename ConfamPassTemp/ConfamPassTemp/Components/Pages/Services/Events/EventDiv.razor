@page "/event/{Id}"

<div class="col-xl-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
    <article>

        <div class="post-img">
            <img src="@EventImage" alt="" class="img-fluid">
        </div>

        <p class="post-category">@Title</p>

        <h2 class="title">
            <a href="event-detail/@Id">@ShortDescription</a>
        </h2>

        <div class="d-flex align-items-center">
            <img src="@CreatorImage" alt="" class="img-fluid post-author-img flex-shrink-0">
            <div class="post-meta">
                <p class="post-author">@Creator</p>
                <p class="post-date">
                    <time datetime="2022-01-01">@EventDate</time>
                </p>
            </div>
        </div>

    </article>
</div>

@code {
    [Parameter]
    public string Id { get; set; }
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string ShortDescription { get; set; }
    [Parameter]
    public string Creator { get; set; }
    [Parameter]
    public string EventDate { get; set; }
    [Parameter]
    public string EventImage { get; set; }
    [Parameter]
    public string CreatorImage { get; set; }

}
